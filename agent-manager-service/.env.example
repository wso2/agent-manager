# =============================================================================
# Agent Manager Service Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
SERVER_HOST=
SERVER_PORT=9000
AUTH_HEADER=Authorization
AUTO_MAX_PROCS_ENABLED=true
CORS_ALLOWED_ORIGIN=http://localhost:3000

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Database Configuration (Required)
# -----------------------------------------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_USER=agentmanager
DB_PASSWORD=agentmanager
DB_NAME=agentmanager

# Database Pool Configuration (Optional)
# GORM_SKIP_DEFAULT_TRANSACTION=true
# GORM_SLOW_THRESHOLD_MILLISECONDS=200
# DB_MAX_IDLE_COUNT=
# DB_MAX_OPEN_COUNT=
# DB_MAX_IDLE_TIME_SECONDS=
# DB_MAX_LIFETIME_SECONDS=

# Database Operation Timeouts (Optional)
# DB_OPERATION_TIMEOUT_SECONDS=10
# HEALTH_CHECK_TIMEOUT_SECONDS=5

# -----------------------------------------------------------------------------
# Kubernetes Configuration
# -----------------------------------------------------------------------------
KUBECONFIG=/Users/<Username>/.kube/config

# -----------------------------------------------------------------------------
# HTTP Server Timeouts (Optional)
# -----------------------------------------------------------------------------
# HTTP_READ_TIMEOUT_SECONDS=10
# HTTP_WRITE_TIMEOUT_SECONDS=90
# HTTP_IDLE_TIMEOUT_SECONDS=60
# HTTP_MAX_HEADER_BYTES=65536

# -----------------------------------------------------------------------------
# Development Environment
# -----------------------------------------------------------------------------
IS_LOCAL_DEV_ENV=true
DEFAULT_GATEWAY_PORT=19080

# -----------------------------------------------------------------------------
# JWT Signing Configuration for Agent API Tokens
# -----------------------------------------------------------------------------
JWT_SIGNING_PRIVATE_KEY_PATH=keys/private.pem
JWT_SIGNING_PUBLIC_KEYS_CONFIG=keys/public-keys-config.json
JWT_SIGNING_ACTIVE_KEY_ID=key-1
JWT_SIGNING_DEFAULT_EXPIRY=8760h
JWT_SIGNING_ISSUER=agent-manager-service
JWT_SIGNING_DEFAULT_ENVIRONMENT=default

# -----------------------------------------------------------------------------
# Key Manager Configuration (Optional)
# -----------------------------------------------------------------------------
# KEY_MANAGER_ISSUER=Agent Management Platform Local
# KEY_MANAGER_AUDIENCE=localhost
# KEY_MANAGER_JWKS_URL=
# KEY_MANAGER_DEFAULT_ISSUER=Agent Management Platform Local

# -----------------------------------------------------------------------------
# Deployment Type
# -----------------------------------------------------------------------------
IS_ON_PREM_DEPLOYMENT=true

# -----------------------------------------------------------------------------
# IDP OAuth2 Configuration for Service-to-Service Auth (Optional)
# -----------------------------------------------------------------------------
# IDP_TOKEN_URL=http://thunder.amp.localhost:8080/oauth2/token
# IDP_CLIENT_ID=amp-api-client
# IDP_CLIENT_SECRET=amp-api-client-secret

# -----------------------------------------------------------------------------
# OpenChoreo Configuration (Required)
# -----------------------------------------------------------------------------
OPEN_CHOREO_BASE_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# OpenTelemetry Configuration (Optional)
# -----------------------------------------------------------------------------
# OTEL_SDK_VOLUME_NAME=otel-tracing-sdk-volume
# OTEL_SDK_MOUNT_PATH=/otel-tracing-sdk
# OTEL_TRACELOOP_TRACE_CONTENT=true
# OTEL_EXPORTER_OTLP_ENDPOINT=http://opentelemetry-collector.openchoreo-observability-plane.svc.cluster.local:4318

# -----------------------------------------------------------------------------
# Observer Service Configuration (Optional)
# -----------------------------------------------------------------------------
# OBSERVER_URL=http://localhost:8085

# -----------------------------------------------------------------------------
# Trace Observer Service Configuration (Optional)
# -----------------------------------------------------------------------------
# TRACE_OBSERVER_URL=http://localhost:9098

# -----------------------------------------------------------------------------
# GitHub Configuration (Optional)
# -----------------------------------------------------------------------------
# GITHUB_TOKEN=

# -----------------------------------------------------------------------------
# Agent Workload CORS Configuration (Optional)
# -----------------------------------------------------------------------------
# AGENT_WORKLOAD_CORS_ALLOWED_ORIGIN=http://localhost:3000
# AGENT_WORKLOAD_CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
# AGENT_WORKLOAD_CORS_ALLOWED_HEADERS=authorization,Content-Type,Origin

# -----------------------------------------------------------------------------
# Default Chat API Configuration (Optional)
# -----------------------------------------------------------------------------
# DEFAULT_CHAT_API_HTTP_PORT=8000
# DEFAULT_CHAT_API_BASE_PATH=/

# -----------------------------------------------------------------------------
# Agent Manager Version (Optional)
# -----------------------------------------------------------------------------
# AMP_VERSION=

# -----------------------------------------------------------------------------
# API Platform Configuration (Optional)
# -----------------------------------------------------------------------------
# API_PLATFORM_BASE_URL=

